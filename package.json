{
  "name": "square-cal-sync",
  "version": "1.0.0",
  "description": "Synchronises a squareup.com appointment calendar with an Apple iCal calendar",
  "main": "dist/app.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "clean": "rm -rf ./dist",
    "build": "tsc && rm -rf ./dist/**/*.test.js && rm -rf ./dist/**/*.test.d.ts && rm -rf ./dist/**/*.test.js.map && rm -rf ./dist/**/*.test.d.ts.map",
    "dev": "ts-node src/app.ts",
    "test": "jest --testPathIgnorePatterns=integration.test.ts",
    "test:watch": "jest --watch",
    "test:integration": "jest --testNamePattern=integration",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "square": "^38.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^24.5.2",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
